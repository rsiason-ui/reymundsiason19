<body>
  <h1>Client Testimonials</h1>

  <!-- Form -->
  <div class="card">
    <h2 style="color:#d4af37">Submit Your Testimonial</h2>
    <form id="testimonialForm" onsubmit="event.preventDefault();submitTestimonial();">
      <input type="text" id="name" placeholder="Your Name" required/>
      <input type="email" id="email" placeholder="Your Email" required/>
      <textarea id="message" placeholder="Your Testimonial" required></textarea>
      <div class="rating">
        <input type="radio" id="star5" name="rating" value="5"/><label for="star5">★</label>
        <input type="radio" id="star4" name="rating" value="4"/><label for="star4">★</label>
        <input type="radio" id="star3" name="rating" value="3"/><label for="star3">★</label>
        <input type="radio" id="star2" name="rating" value="2"/><label for="star2">★</label>
        <input type="radio" id="star1" name="rating" value="1"/><label for="star1">★</label>
      </div>
      <button id="sendBtn">Send <div id="spinner"></div></button>
    </form>
    <div id="formMsg">✅ Your testimonial has been submitted. Please wait for the admin to approve it.</div>
  </div>

  <!-- Testimonials -->
  <div id="testimonialList"></div>

  <!-- Admin Login -->
  <div class="card">
    <h2 style="color:#d4af37">Admin Login</h2>
    <input type="password" id="adminPass" placeholder="Password"/>
    <button onclick="loginAdmin()">Login</button>
  </div>

  <!-- Admin Panel -->
  <div id="adminPanel" style="display:none;">
    <h2 style="color:#d4af37;text-align:center;">Admin Panel</h2>
    <div id="testimonialList"></div>
  </div>
